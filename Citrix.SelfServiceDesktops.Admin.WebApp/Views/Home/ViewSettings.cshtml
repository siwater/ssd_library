@model Citrix.SelfServiceDesktops.DesktopLibrary.Configuration.DesktopServiceConfigurationElement
@{
    ViewBag.Title = "ViewSettings";
}

<h2>ViewSettings</h2>
@using (Html.BeginForm("EndEditSettings", "Home", FormMethod.Post)) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Self Service Desktop Settings</legend>
        <table>
             <tr>
                <td><div class="editor-label">@Html.LabelFor(model => model.BrokerUri)</div></td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.BrokerUri)
                        @Html.ValidationMessageFor(model => model.BrokerUri)
                    </div>
                </td>    
            </tr> 
            <tr>
                <td><div class="editor-label">@Html.LabelFor(model => model.CloudStackUri)</div></td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.CloudStackUri)
                        @Html.ValidationMessageFor(model => model.CloudStackUri)
                    </div>
                </td>    
            </tr> 
            <tr>
                <td><div class="editor-label">@Html.LabelFor(model => model.Domain)</div></td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Domain)
                        @Html.ValidationMessageFor(model => model.Domain)
                    </div>
                </td>    
            </tr>  
            <tr>
                <td><div class="editor-label">@Html.LabelFor(model => model.ListenPort)</div></td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.ListenPort)
                        @Html.ValidationMessageFor(model => model.ListenPort)
                    </div>
                </td>    
            </tr>
             <tr>
                <td><div class="editor-label">@Html.LabelFor(model => model.PowerShellScriptBase, "PowerShell Script")</div></td>
            </tr> 
            <tr>           
                <td  style="padding-left: 2em">
                    <div class="editor-label">@Html.LabelFor(model => model.PowerShellScriptBase.Path)</div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.PowerShellScriptBase.Path)
                        @Html.ValidationMessageFor(model => model.PowerShellScriptBase.Path)
                    </div>
                </td>
            </tr>
            <tr>           
                <td  style="padding-left: 2em">
                    <div class="editor-label">@Html.LabelFor(model => model.PowerShellScript.Frequency)</div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.PowerShellScriptBase.FrequencyBase)
                        @Html.ValidationMessageFor(model => model.PowerShellScriptBase.FrequencyBase)
                    </div>
                </td>
            </tr>
             <tr>
                <td style="padding-left: 2em">
                    <div class="editor-label">@Html.LabelFor(model => model.PowerShellScript.Debug)</div></td>
                <td>
                    <div class="editor-field">
                        @Html.CheckBoxFor(model => model.PowerShellScript.Debug)
                    </div>
                </td>    
            </tr>                        
            <tr>
                <td><input type="submit" value="Save"/></td>          
            </tr>     
        </table>
   </fieldset>  
}
<div>
    @Html.ActionLink("Back to List", "ViewDesktopOfferings")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}